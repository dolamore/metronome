{
  "name": "metronome",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.metronome",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  },
  "keywords": ["metronome", "music", "electron", "app"],
  "author": "dolamore",
  "license": "MIT",
  "description": "A simple metronome application built with Electron.",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "howler": "^2.2.4",
    "tone": "^15.0.4"
  }
}
